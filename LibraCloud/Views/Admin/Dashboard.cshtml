@model IEnumerable<LibraCloud.Models.Book>
@{
    ViewData["Title"] = "Admin Dashboard";
    var reservations = ViewBag.Reservations as List<LibraCloud.Models.Reservation>;
    var users = ViewBag.Users as List<LibraCloud.Models.ApplicationUser>;
}

<section class="container my-5">
    <h1 class="text-black fw-bold mb-4">Admin Dashboard</h1>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="glass-card light-card p-4">
                <h5 class="text-blue">Total Books</h5>
                <p class="display-6 fw-bold">@ViewBag.TotalBooks</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="glass-card light-card p-4">
                <h5 class="text-blue">Total Reservations</h5>
                <p class="display-6 fw-bold">@ViewBag.TotalReservations</p>
            </div>
        </div>
    </div>

    <div class="text-end mb-3">
        <a asp-controller="Books" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus"></i> Add New Book
        </a>
    </div>

    <div class="row g-4 mb-5">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="glass-card dark-card p-4">
                    <h5 class="fw-bold text-white">@book.Title</h5>
                    <p class="text-white mb-1">by @book.Author</p>
                    <p class="text-white mb-3">Available: @book.QuantityAvailable</p>
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (reservations != null && reservations.Any())
    {
        <div class="glass-card light-card p-4 mb-5">
            <h3 class="fw-bold text-blue mb-3">Reservations</h3>
            <table class="table table-bordered table-striped bg-white">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Book</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Cancel</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in reservations)
                    {
                        <tr>
                            <td>@reservation.User?.Email</td>
                            <td>@reservation.Book?.Title</td>
                            <td>@reservation.ReservationDate.ToShortDateString()</td>
                            <td>@reservation.Status</td>
                            <td>
                                @if (reservation.Status != "Canceled")
                                {
                                    <form asp-action="CancelReservation" asp-controller="Admin" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@reservation.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">Canceled</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (users != null && users.Any())
    {
        <div class="glass-card light-card p-4">
            <h3 class="fw-bold text-blue mb-3">Users</h3>
            <table class="table table-bordered table-striped bg-white">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Username</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in users)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@user.UserName</td>
                            <td>
                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
